# .env.example
# এই ফাইলটি কপি করে .env নামে save করুন এবং আপনার API key গুলো দিন

# Gemini API Key (Required - আবশ্যক)
# Get from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=[GCP_API_KEY]

# Gemini Model (Optional - ঐচ্ছিক)
GEMINI_MODEL=gemini-2.0-flash-exp

# OpenAI API Key (Optional - যদি OpenAI ব্যবহার করতে চান)
# OPENAI_API_KEY=your_openai_api_key_here

# Application Settings
DEBUG=False
PORT=5000
SKIP_INGEST=False

# Default UI Language (en or bn)
DEFAULT_LANGUAGE=bn
